$lt-orange: #F4C411;
$dk-orange: #ff911d;
$lt-teal: #51F9FC;
$dk-teal: #2B739C;
$lt-blue: #4572FC;
$dk-blue: #4238F9;
$act-font: 55px;

body {
  background-color: #7D746C;
}

.act-font {
  font-size: $act-font;
}

#spacer {
  margin-top: 20%;
}

.actualize-button {
  background-color: $dk-teal;
  color: white;
  border-radius: 20px;
  padding: 15px 30px;
  font-size: $act-font;
  border: none;
  margin-top: 25px;
}

.actualize-button:hover {
  color: $dk-teal;
  background-color: $lt-orange;
  margin-right: 15px;
}

.form-labels {
  color: $dk-orange;
}

.actualize-logo {
  margin-bottom: 15px;
}

#footer {
  position: absolute;
  bottom: 0;
  margin-left: 42%;
  a {
    color: $dk-orange;
    text-decoration: none;
  }
  a:hover {
    color: $lt-teal;
  }
}

.actualize-link {
  text-decoration: none;
  color: inherit;
}

.actualize-link:hover {
  text-decoration: none;
  color: $lt-teal;
}

.form-control {
  font-size: $act-font;
  height: 80px;
}

.alert {
  font-size: $act-font;
}