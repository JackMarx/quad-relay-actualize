<div id="spacer"></div>

<% if current_guest %>
  <a href="/open_door" data-method="post" class="actualize-link">
    <div class="row">
      <h3 class="text-center actualize-link act-font"><%= current_guest.full_name.upcase %></h3>
    </div>

    <div class="row actualize-logo">
        <%= image_tag "actualize-logo.png", class: "col-xs-10 col-xs-offset-1" %>
    </div>

    <div class="row">
      <h3 id="open-message" class="text-center act-font">LET ME IN!</h3>
    </div>
  </a>

  <div id="footer" >
      <h1>
        <%= link_to "Logout", logout_path, method: :delete %>
      </h1>
  </div>
<% else %>
  <div class="row actualize-logo">
    <%= image_tag "actualize-logo.png", class: "col-xs-10 col-xs-offset-1" %>
  </div>

  <div class="row">
    <%= form_with(model: @guest, local: true, url: login_path, class: "form-horizontal col-xs-offset-1 col-xs-10") do |form| %>
      <% if flash["message"] %>
        <div id="error_explanation">
          <h2><%= flash["message"] %></h2>
        </div>
      <% end %>

      <div class="form-group row">
        <label for="user_email" class=" act-font control-label form-labels">Email</label>
        <div class="">
          <input name="guest[email]" type="email" class="form-control" id="user_email" placeholder="ex. email@actualize.co">
        </div>
      </div>
      <div class="form-group row">
        <label for="user_password" class=" act-font control-label form-labels">Password</label>
        <div class="">
          <input name="guest[password]" type="password" class="form-control" id="user_password" placeholder="ex. xxxxxxxx">
        </div>
      </div>
      
        <div class="form-group pull-right">
          <%= form.submit "Log In", class: "actualize-button" %>
        </div>
    <% end %>
  </div>
<% end %>